<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartswitch">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- 6.0以上需要加的额外权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sm1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sm1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main" android:icon="@drawable/sm1">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity android:name=".BluetoothClientActivity_mytimer_auto"/>
        <activity android:name=".BluetoothClientActivity_mytimer_machinery"/>
        <activity android:name=".timer_open">

        </activity>
        <activity android:name=".timer_close">

        </activity>
        <activity android:name=".timer_open_mytimer">

        </activity>
        <activity android:name=".timer_close_mytimer">

        </activity>
    </application>

</manifest>